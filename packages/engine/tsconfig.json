{
    "include": ["Source/**/**.js"],
    "exclude": [
        "Source/ThirdParty/**/*",
        "Source/Workers/**/*",
        "Source/Core/Check.js",
        "Source/Core/defined.js"
    ],
    "compilerOptions": {
      "module": "node16",
      "strict": true,
      "verbatimModuleSyntax": true,
      "composite": true,
      "allowJs": true,
      "declaration": true,
      "emitDeclarationOnly": true,
      "declarationMap": true,
      "types": ["node"],
      "outDir": "types",
      "rootDir": "."
    }
  }