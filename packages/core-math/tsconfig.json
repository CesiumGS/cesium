{
  "include": ["Source/**/*.js"],
  "compilerOptions": {
    // module configuration
    "moduleResolution": "bundler",
    "module": "ES2022",
    "target": "ES2022",

    // i/o
    "declaration": true,
    "declarationDir": "Build/Types",
    "emitDeclarationOnly": true,
    "allowJs": true,
    "checkJs": true,

    // ignore type definitions in other modules for now, we need types
    // to be correct and to resolve imports first.
    "skipLibCheck": true
  }
}
